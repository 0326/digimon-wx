{
  "extends": "eslint-config-ali/react",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "globals": {
    "Zepto": true,
    "PIXI": true,
    "app": true
  },
  "rules": {
    "semi": ["error", "never"],
    "no-new": "off"
  }
}
